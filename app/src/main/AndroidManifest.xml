<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.antonio.progetto">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/launcher"
        android:label="@string/WeFood"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
        <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
        <uses-permission android:name="android.permission.MEDIA_CONTENT_CONTROL"/>
        <activity android:name=".MainActivity"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
               </intent-filter>
            <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
            <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
            <uses-permission android:name="android.permission.MEDIA_CONTENT_CONTROL"/>

        </activity>

        <activity android:name=".Registrazione"
            android:windowSoftInputMode="stateHidden|adjustResize"/>
        <activity android:name=".supermercato.MainSupermercato"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
            <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
            <uses-permission android:name="android.permission.MEDIA_CONTENT_CONTROL"/>
        </activity>
        <activity android:name=".supermercato.ModificaInfo"
            android:windowSoftInputMode="stateHidden|adjustResize"/>
        <activity android:name=".supermercato.AggiungiProdottiSup"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
            <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
            <uses-permission android:name="android.permission.MEDIA_CONTENT_CONTROL"/>
        </activity>
        <activity android:name=".ente.MainEnte"
            android:windowSoftInputMode="stateHidden|adjustResize"/>
        <activity android:name=".ente.Ricerca_ente"
            android:windowSoftInputMode="stateHidden|adjustResize"/>

        <activity android:name=".supermercato.DescrizioneProdotto"
            android:windowSoftInputMode="stateHidden|adjustResize">
        <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
        <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
        <uses-permission android:name="android.permission.MEDIA_CONTENT_CONTROL"/>
        </activity>

    </application>

</manifest>