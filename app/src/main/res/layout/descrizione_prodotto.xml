<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/nome_obj_descr"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="105dp"
        android:text="Non dichiarata"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/mod_quantita"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="350dp"
        android:ems="10"
        android:inputType="number"
        android:text="Nuova Quantità"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/qnt3_obj_descr"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="355dp"
        android:ems="10"
        android:inputType="number"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/scadenza_obj_desscr"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/nome_obj_descr"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/scadenza2_obj_descr"
        android:layout_toRightOf="@+id/scadenza2_obj_descr"
        android:text="Non dichiarata"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/quantita_obj_descr"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="205dp"
        android:text="Non dichiarata"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/marca_obj_descr"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="255dp"
        android:text="Non dichiarata"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/sup2_obj_descr"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/scadenza_obj_desscr"
        android:layout_alignStart="@+id/scadenza_obj_desscr"
        android:layout_below="@+id/marca_obj_descr"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:linksClickable="false"
        android:text="Non dichiarata"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/nome2_obj_descr"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="100dp"
        android:clickable="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="textPersonName"
        android:linksClickable="false"
        android:text="Nome"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/scadenza2_obj_descr"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/nome2_obj_descr"
        android:layout_alignTop="@+id/nome_obj_descr"
        android:layout_marginLeft="-20dp"
        android:layout_marginTop="45dp"
        android:clickable="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="textPersonName"
        android:linksClickable="false"
        android:text="Scadenza"
        android:textAlignment="viewStart"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/quantita2_obj_descr"
        android:layout_width="98dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="200dp"
        android:clickable="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="textPersonName"
        android:linksClickable="false"
        android:text="Quantità"
        android:textAlignment="viewStart"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/marca2_obj_descr"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="250dp"
        android:clickable="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="textPersonName"
        android:linksClickable="false"
        android:text="Marca"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/sup2_obj_descr"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="300dp"
        android:clickable="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="textPersonName"
        android:linksClickable="false"
        android:text="Origine"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/qnt2_obj_descr"
        android:layout_width="98dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="350dp"
        android:clickable="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="textPersonName"
        android:linksClickable="false"
        android:text="Quantità"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/main__obj_descr"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="-50dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@+id/nome2_obj_descr"
        android:layout_toRightOf="@+id/nome2_obj_descr"
        android:clickable="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="textPersonName"
        android:linksClickable="false"
        android:text="Descrizione Prodotto"
        android:textAlignment="center" />

    <Button
        android:id="@+id/ordina_obj_descr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/marca_obj_descr"
        android:layout_alignRight="@+id/marca_obj_descr"
        android:layout_marginTop="355dp"
        android:background="@android:color/transparent"
        android:onClick="Ordina"
        android:text="Ordina" />

    <Button
        android:id="@+id/b_delete_sup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="420dp"
        android:background="@android:color/transparent"
        android:onClick="EliminaSup"
        android:text="Elimina Prodotto" />

    <Button
        android:id="@+id/b_delete_ente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="350dp"
        android:background="@android:color/transparent"
        android:onClick="EliminaEnte"
        android:text="Annulla Ordine" />

    <Button
        android:id="@+id/b_mod_quantita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:onClick="ModificaQuantita"
        android:text="Modifica Quantità"
        android:layout_alignBaseline="@+id/ordina_obj_descr"
        android:layout_alignBottom="@+id/ordina_obj_descr"
        android:layout_alignRight="@+id/ordina_obj_descr"
        android:layout_alignEnd="@+id/ordina_obj_descr" />

</RelativeLayout>
</ScrollView>